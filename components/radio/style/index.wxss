.mccree-radio-icon-root {
  position: relative;
  display: flex;
}
.mccree-radio-icon-root .checked-icon {
  position: absolute;
  left: 0;
  transform: scale(0);
  transition: transform 150ms cubic-bezier(0.4, 0, 1, 1) 0ms;
}
.mccree-radio-icon-root.checked .checked-icon {
  transform: scale(1);
  transition: transform 150ms cubic-bezier(0, 0, 0.2, 1) 0ms;
}
