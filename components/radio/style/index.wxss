.mccree-radio {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  color: rgba(0, 0, 0, 0.65);
  font-size: 14px;
  font-variant: tabular-nums;
  line-height: 1.5715;
  list-style: none;
  font-feature-settings: "tnum";
  width: 100%;
  display: flex;
  align-items: inherit;
  justify-content: initial;
  position: relative;
  padding: 9px;
  font-size: 24px;
  border-radius: 50%;
  user-select: none;
  transition: background-color 150ms cubic-bezier(0.4, 0, 0.2, 1) 0ms;
  color: rgba(0, 0, 0, 0.54);
}
.mccree-radio-root {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  color: rgba(0, 0, 0, 0.65);
  font-variant: tabular-nums;
  line-height: 1.5715;
  list-style: none;
  font-feature-settings: "tnum";
  position: relative;
  display: inline-flex;
  align-items: center;
  vertical-align: middle;
  justify-content: center;
  text-decoration: none;
  flex: 0 0 auto;
  overflow: visible;
  font-size: 14px;
  text-align: center;
  cursor: pointer;
}
.mccree-radio .mccree-radio-input {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  cursor: inherit;
  height: 100%;
  margin: 0;
  opacity: 0;
  padding: 0;
  z-index: 1;
}
.mccree-radio-icon-root {
  position: relative;
  display: flex;
}
.mccree-radio-icon-root .checked-icon {
  position: absolute;
  left: 0;
  transform: scale(0);
  transition: transform 150ms cubic-bezier(0.4, 0, 1, 1) 0ms;
}
.mccree-radio-icon-root.checked .checked-icon {
  transform: scale(1);
  transition: transform 150ms cubic-bezier(0, 0, 0.2, 1) 0ms;
}
