.mccree-radio {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  color: rgba(0, 0, 0, 0.65);
  font-size: 14px;
  font-variant: tabular-nums;
  line-height: 1.5715;
  list-style: none;
  font-feature-settings: "tnum";
  width: 100%;
  display: flex;
  align-items: inherit;
  justify-content: initial;
  position: relative;
  padding: 9px;
  font-size: 24px;
  border-radius: 50%;
  user-select: none;
  transition: background-color 150ms cubic-bezier(0.4, 0, 0.2, 1) 0ms;
  color: rgba(0, 0, 0, 0.54);
}
